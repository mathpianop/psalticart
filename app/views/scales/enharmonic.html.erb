<div class="scale-name-container">
  <%= link_to "Scales", scales_path, class: "basic-link", id: "link-to-scales" %>
  <h1 id="scale-name">Enharmonic Scale</h1>
</div>
<section class="interactive-scale">
  <div id="how-to-use">
    Hover over a note to hear it; click to hold it. 
    If notes do not play, click anwhere on the page first.
  </div>
  <div class="note" id="C3">
    C3
    <%= audio_tag("c3pitch.m4a", id: "clip-C3")%>
  </div>
  <div class="note" id="D3">
    D3
    <%= audio_tag("d3pitch.m4a", id: "clip-D3")%>
  </div>

  <div class="note" id="E3">
    E3
    <%= audio_tag("e3pitch.m4a", id: "clip-E3")%>
  </div>
  <div class="note" id="F3">
    F3
    <%= audio_tag("f3pitch.m4a", id: "clip-F3")%>
  </div>
  <div class="note" id="G3">
    G3
    <%= audio_tag("g3pitch.m4a", id: "clip-G3")%>
  </div>
  <div class="note" id="A3">
    A3
    <%= audio_tag("a3pitch.m4a", id: "clip-A3")%>
  </div>
  <div class="note" id="Bflat3">
    Bb3
    <%= audio_tag("bflat3pitch.m4a", id: "clip-Bflat3")%>
  </div>
  
  <div class="note" id="C4">
    C4
    <%= audio_tag("c4pitch.m4a", id: "clip-C4")%>
  </div>
  <div class="note" id="D4">
    D4
    <%= audio_tag("d4pitch.m4a", id: "clip-D4")%>
  </div>
  <%= javascript_pack_tag 'enharmonic.js'%>
<%= javascript_pack_tag 'scales.js'%>
</section>